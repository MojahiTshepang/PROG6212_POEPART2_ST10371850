@model CMCS.Models.Claim

@{
    ViewData["Title"] = "Claim Details";
}

<div class="container">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2>
            <i class="fas fa-file-invoice-dollar me-2"></i>
            Claim Details #@Model.ClaimID
        </h2>
        <div>
            <a asp-action="Index" class="btn btn-secondary">
                <i class="fas fa-arrow-left me-1"></i>Back to Claims
            </a>
            @if (Model.Status == "Pending")
            {
                <a asp-action="Edit" asp-route-id="@Model.ClaimID" class="btn btn-primary">
                    <i class="fas fa-edit me-1"></i>Edit Claim
                </a>
            }
        </div>
    </div>

    <div class="row">
        <div class="col-md-8">
            <div class="card shadow">
                <div class="card-header bg-primary text-white">
                    <h5 class="card-title mb-0">
                        <i class="fas fa-info-circle me-2"></i>
                        Claim Information
                    </h5>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label class="form-label fw-bold text-muted">Claim ID</label>
                                <div class="form-control-plaintext">#@Model.ClaimID</div>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label class="form-label fw-bold text-muted">Status</label>
                                <div>
                                    <span class="badge @GetStatusBadgeClass(Model.Status) fs-6">@Model.Status</span>
                                </div>
                            </div>
                        </div>
                    </div>
                    
                    <div class="row">
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label class="form-label fw-bold text-muted">Date Submitted</label>
                                <div class="form-control-plaintext">@Model.DateSubmitted.ToString("dddd, dd MMMM yyyy")</div>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label class="form-label fw-bold text-muted">Lecturer</label>
                                <div class="form-control-plaintext">@(Model.Lecturer?.Name ?? "Unknown")</div>
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-4">
                            <div class="mb-3">
                                <label class="form-label fw-bold text-muted">Total Hours</label>
                                <div class="form-control-plaintext fs-5">@Model.TotalHours hours</div>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="mb-3">
                                <label class="form-label fw-bold text-muted">Hourly Rate</label>
                                <div class="form-control-plaintext fs-5">R@Model.HourlyRate.ToString("F2")</div>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="mb-3">
                                <label class="form-label fw-bold text-muted">Total Amount</label>
                                <div class="form-control-plaintext fs-4 fw-bold text-primary">R@Model.TotalAmount.ToString("F2")</div>
                            </div>
                        </div>
                    </div>

                    @if (!string.IsNullOrEmpty(Model.Notes))
                    {
                        <div class="mb-3">
                            <label class="form-label fw-bold text-muted">Additional Notes</label>
                            <div class="form-control-plaintext bg-light p-3 rounded">@Model.Notes</div>
                        </div>
                    }
                </div>
            </div>
        </div>

        <div class="col-md-4">
            <div class="card shadow">
                <div class="card-header bg-info text-white">
                    <h5 class="card-title mb-0">
                        <i class="fas fa-paperclip me-2"></i>
                        Supporting Documents
                    </h5>
                </div>
                <div class="card-body">
                    @if (Model.Documents != null && Model.Documents.Any())
                    {
                        @foreach (var document in Model.Documents)
                        {
                            <div class="d-flex justify-content-between align-items-center mb-2 p-2 bg-light rounded">
                                <div class="flex-grow-1">
                                    <div class="fw-bold">@document.FileName</div>
                                    <small class="text-muted">
                                        @(document.FileSize / 1024) KB â€¢ @document.UploadDate.ToString("dd MMM yyyy")
                                    </small>
                                </div>
                                <a href="@Url.Content("~/uploads/claims/" + Model.ClaimID + "/" + System.IO.Path.GetFileName(document.FilePath))" 
                                   target="_blank" class="btn btn-outline-primary btn-sm">
                                    <i class="fas fa-download"></i>
                                </a>
                            </div>
                        }
                    }
                    else
                    {
                        <div class="text-center text-muted py-3">
                            <i class="fas fa-file fa-3x mb-2"></i>
                            <div>No documents attached</div>
                        </div>
                    }
                </div>
            </div>

            <!-- Status Timeline -->
            <div class="card shadow mt-3">
                <div class="card-header bg-secondary text-white">
                    <h5 class="card-title mb-0">
                        <i class="fas fa-history me-2"></i>
                        Status Timeline
                    </h5>
                </div>
                <div class="card-body">
                    <div class="timeline">
                        <div class="timeline-item">
                            <div class="timeline-marker bg-primary"></div>
                            <div class="timeline-content">
                                <h6 class="timeline-title">Claim Submitted</h6>
                                <p class="timeline-text">@Model.DateSubmitted.ToString("dd MMM yyyy HH:mm")</p>
                            </div>
                        </div>
                        
                        @if (Model.Status == "Approved")
                        {
                            <div class="timeline-item">
                                <div class="timeline-marker bg-success"></div>
                                <div class="timeline-content">
                                    <h6 class="timeline-title">Claim Approved</h6>
                                    <p class="timeline-text">Approved by Academic Manager</p>
                                </div>
                            </div>
                        }
                        else if (Model.Status == "Rejected")
                        {
                            <div class="timeline-item">
                                <div class="timeline-marker bg-danger"></div>
                                <div class="timeline-content">
                                    <h6 class="timeline-title">Claim Rejected</h6>
                                    <p class="timeline-text">Rejected by reviewer</p>
                                </div>
                            </div>
                        }
                        else
                        {
                            <div class="timeline-item">
                                <div class="timeline-marker bg-warning"></div>
                                <div class="timeline-content">
                                    <h6 class="timeline-title">Under Review</h6>
                                    <p class="timeline-text">Awaiting approval</p>
                                </div>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@functions {
    string GetStatusBadgeClass(string status)
    {
        return status switch
        {
            "Pending" => "bg-warning",
            "Approved" => "bg-success",
            "Rejected" => "bg-danger",
            "Under Review" => "bg-info",
            _ => "bg-secondary"
        };
    }
}

@section Scripts {
    <style>
        .timeline {
            position: relative;
            padding-left: 30px;
        }

        .timeline-item {
            position: relative;
            margin-bottom: 20px;
        }

        .timeline-marker {
            position: absolute;
            left: -35px;
            top: 5px;
            width: 12px;
            height: 12px;
            border-radius: 50%;
            border: 2px solid #fff;
            box-shadow: 0 0 0 2px #dee2e6;
        }

        .timeline-content {
            background: #f8f9fa;
            padding: 10px 15px;
            border-radius: 5px;
            border-left: 3px solid #dee2e6;
        }

        .timeline-title {
            margin: 0 0 5px 0;
            font-size: 14px;
            font-weight: 600;
        }

        .timeline-text {
            margin: 0;
            font-size: 12px;
            color: #6c757d;
        }
    </style>
}
