@model IEnumerable<CMCS.Models.Claim>

@{
    ViewData["Title"] = "Claims List";
}

<div class="container mt-4">
    <h1 class="text-center mb-4">Claims List</h1>

    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2 class="h4">Existing Claims</h2>
        <a asp-action="Create" class="btn btn-primary rounded-lg shadow-sm">
            <i class="fas fa-plus-circle me-2"></i>Create New Claim
        </a>
    </div>

    @if (!Model.Any())
    {
        <div class="alert alert-info text-center" role="alert">
            No claims found. Click the button above to add the first one.
        </div>
    }
    else
    {
        <div class="table-responsive rounded-lg shadow-sm">
            <table class="table table-hover mb-0">
                <thead class="bg-light">
                    <tr>
                        <th>Claim ID</th>
                        <th>Lecturer ID</th>
                        <th>Date Submitted</th>
                        <th>Total Hours</th>
                        <th>Status</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var claim in Model)
                    {
                        <tr>
                            <td>@claim.ClaimID</td>
                            <td>@claim.LecturerID</td>
                            <td>@claim.DateSubmitted.ToShortDateString()</td>
                            <td>@claim.TotalHours</td>
                            <td>@claim.Status</td>
                            <td>
                                <!--
                                    These links are placeholders for future functionality.
                                    You'll need to create corresponding actions in your controller.
                                -->
                                <a href="#" class="btn btn-sm btn-outline-secondary rounded-lg">Edit</a>
                                <a href="#" class="btn btn-sm btn-outline-danger rounded-lg ms-2">Delete</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
</div>

@section Scripts {
    <script src="https://kit.fontawesome.com/a076d05399.js" crossorigin="anonymous"></script>
}
