@model CMCS.Models.ViewModels.DashboardViewModel

@{
    ViewData["Title"] = "Dashboard";
}

<div class="row">
    <div class="col-md-12">
        <div class="alert alert-success" role="alert">
            Registration successful! Please login with your credentials.
        </div>
    </div>
</div>

<h1>Dashboard</h1>
<p>Welcome to the Contract Monthly Claim System</p>

<div class="row">
    <div class="col-md-3">
        <div class="card text-white bg-info mb-3">
            <div class="card-body">
                <h5 class="card-title">Total Claims</h5>
                <h1 class="card-text">@Model.TotalClaims</h1>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card text-dark bg-warning mb-3">
            <div class="card-body">
                <h5 class="card-title">Pending</h5>
                <h1 class="card-text">@Model.PendingClaims</h1>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card text-white bg-success mb-3">
            <div class="card-body">
                <h5 class="card-title">Approved</h5>
                <h1 class="card-text">@Model.ApprovedClaims</h1>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card text-white bg-danger mb-3">
            <div class="card-body">
                <h5 class="card-title">Rejected</h5>
                <h1 class="card-text">@Model.RejectedClaims</h1>
            </div>
        </div>
    </div>
</div>

<div class="row mt-4">
    <div class="col-md-6">
        <div class="card">
            <div class="card-header">
                <h5 class="mb-0">Financial Summary</h5>
            </div>
            <div class="card-body">
                <div class="d-flex justify-content-between">
                    <h6>Total Amount:</h6>
                    <p class="mb-0"><strong>$@Model.TotalAmount.ToString("N2")</strong></p>
                </div>
                <div class="d-flex justify-content-between">
                    <h6>Approved Amount:</h6>
                    <p class="mb-0"><strong>$@Model.ApprovedClaims.ToString("N2")</strong></p>
                </div>
            </div>
        </div>
    </div>
    <div class="col-md-6">
        <div class="card">
            <div class="card-header">
                <h5 class="mb-0">Quick Actions</h5>
            </div>
            <div class="card-body">
                <a asp-controller="Claim" asp-action="Create" class="btn btn-primary">+ Submit New Claim</a>
                <a asp-controller="Claim" asp-action="Index" class="btn btn-secondary">View My Claims</a>
            </div>
        </div>
    </div>
</div>

<div class="row mt-4">
    <div class="col-md-12">
        <div class="card">
            <div class="card-header">
                <h5 class="mb-0">Recent Claims</h5>
            </div>
            <div class="card-body">
                @if (Model.RecentClaims.Any())
                {
                    <table class="table">
                        <thead>
                            <tr>
                                <th>Claim ID</th>
                                <th>Date Submitted</th>
                                <th>Status</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var claim in Model.RecentClaims)
                            {
                                <tr>
                                    <td>@claim.ClaimID</td>
                                    <td>@claim.DateSubmitted.ToShortDateString()</td>
                                    <td>@claim.Status</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                }
                else
                {
                    <p>No recent claims found.</p>
                }
            </div>
        </div>
    </div>
</div>