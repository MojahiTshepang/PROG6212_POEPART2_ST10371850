@model IEnumerable<CMCS.Models.Claim>

@{
    ViewData["Title"] = "My Claims";
}

<div class="container">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2>
            <i class="fas fa-file-invoice-dollar me-2"></i>
            My Claims
        </h2>
        <a asp-controller="Claim" asp-action="Submit" class="btn btn-primary btn-lg">
            <i class="fas fa-plus me-1"></i>Submit New Claim
        </a>
    </div>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <i class="fas fa-check-circle me-2"></i>
            @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <i class="fas fa-exclamation-circle me-2"></i>
            @TempData["ErrorMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    @if (Model.Any())
    {
        <div class="row">
            @foreach (var claim in Model)
            {
                <div class="col-md-6 col-lg-4 mb-4">
                    <div class="card h-100 shadow-sm">
                        <div class="card-header d-flex justify-content-between align-items-center">
                            <h6 class="mb-0">Claim #@claim.ClaimID</h6>
                            <span class="badge @GetStatusBadgeClass(claim.Status.ToString())">@claim.Status</span>
                        </div>
                        <div class="card-body">
                            <div class="row mb-2">
                                <div class="col-6">
                                    <small class="text-muted">Date Submitted:</small>
                                    <div>@claim.DateSubmitted.ToString("dd MMM yyyy")</div>
                                </div>
                                <div class="col-6">
                                    <small class="text-muted">Total Hours:</small>
                                    <div>@claim.TotalHours</div>
                                </div>
                            </div>
                            <div class="row mb-2">
                                <div class="col-6">
                                    <small class="text-muted">Amount:</small>
                                    <div>R@claim.TotalAmount.ToString("F2")</div>
                                </div>
                                <div class="col-6">
                                    <small class="text-muted">Documents:</small>
                                    <div>@(claim.Documents?.Count ?? 0) files</div>
                                </div>
                            </div>
                            @if (!string.IsNullOrEmpty(claim.Notes))
                            {
                                <div class="mb-2">
                                    <small class="text-muted">Notes:</small>
                                    <div class="text-truncate" title="@claim.Notes">@claim.Notes</div>
                                </div>
                            }
                        </div>
                        <div class="card-footer bg-transparent">
                            <div class="d-flex gap-2">
                                <a asp-controller="Claim" asp-action="Details" asp-route-id="@claim.ClaimID" 
                                   class="btn btn-outline-primary btn-sm flex-fill">
                                    <i class="fas fa-eye me-1"></i>View Details
                                </a>
                                @if (claim.Status.ToString() == "Submitted" || claim.Status.ToString() == "Pending")
                                {
                                    <a asp-controller="Claim" asp-action="Edit" asp-route-id="@claim.ClaimID" 
                                       class="btn btn-outline-secondary btn-sm flex-fill">
                                        <i class="fas fa-edit me-1"></i>Edit
                                    </a>
                                }
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
    else
    {
        <div class="text-center py-5">
            <i class="fas fa-file-invoice-dollar fa-4x text-muted mb-4"></i>
            <h4 class="text-muted">No claims found</h4>
            <p class="text-muted">You haven't submitted any claims yet. Start by creating your first claim!</p>
            <a asp-controller="Claim" asp-action="Submit" class="btn btn-primary btn-lg">
                <i class="fas fa-plus me-2"></i>Submit Your First Claim
            </a>
        </div>
    }
</div>

@functions {
    string GetStatusBadgeClass(string status)
    {
        return status switch
        {
            "Submitted" => "bg-primary",
            "Pending" => "bg-warning",
            "ApprovedByProgrammeCoordinator" => "bg-info",
            "ApprovedByAcademicManager" => "bg-success",
            "Rejected" => "bg-danger",
            _ => "bg-secondary"
        };
    }
}

@section Scripts {
    <script src="https://kit.fontawesome.com/a076d05399.js" crossorigin="anonymous"></script>
}
