@model CMCS.Models.User

@{
    ViewData["Title"] = "User Registration";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6 col-lg-5">
            <div class="card shadow-lg rounded-lg border-0">
                <div class="card-header bg-success text-white text-center rounded-top-lg py-3">
                    <h1 class="h4 mb-0">Register</h1>
                </div>
                <div class="card-body p-4">
                    <form asp-controller="Account" asp-action="Register" method="post">
                        <div class="mb-3">
                            <label for="username" class="form-label">Username</label>
                            <input type="text" class="form-control rounded-lg" id="username" name="Username" required>
                        </div>
                        <div class="mb-3">
                            <label for="password" class="form-label">Password</label>
                            <input type="password" class="form-control rounded-lg" id="password" name="Password" required>
                        </div>
                        <div class="mb-3">
                            <label for="confirmPassword" class="form-label">Confirm Password</label>
                            <input type="password" class="form-control rounded-lg" id="confirmPassword" name="ConfirmPassword" required>
                        </div>
                        <div class="mb-3">
                            <label for="Role" class="form-label">Role</label>
                            <select class="form-control rounded-lg" id="Role" name="Role" required>
                                <option value="">Select Role</option>
                                <option value="Lecturer">Lecturer</option>
                            </select>
                            <span asp-validation-for="Role" class="text-danger"></span>
                        </div>
                        <div class="d-grid gap-2">
                            <button type="submit" class="btn btn-success rounded-lg shadow-sm">
                                <i class="fas fa-user-plus me-2"></i>Register
                            </button>
                        </div>
                    </form>
                    <div class="mt-3 text-center">
                        <p class="mb-0">Already have an account? <a href="/Account/Login">Login here</a></p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


