@model CMCS.Models.User

@{
    ViewData["Title"] = "User Login";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6 col-lg-5">
            <div class="card shadow-lg rounded-lg border-0">
                <div class="card-header bg-primary text-white text-center rounded-top-lg py-3">
                    <h1 class="h4 mb-0">Login</h1>
                </div>
                <div class="card-body p-4">
                    <form asp-controller="Account" asp-action="Login" method="post">
                        <div class="mb-3">
                            <label for="username" class="form-label">Username</label>
                            <input type="text" class="form-control rounded-lg" id="username" name="Username" required>
                        </div>
                        <div class="mb-3">
                            <label for="password" class="form-label">Password</label>
                            <input type="password" class="form-control rounded-lg" id="password" name="Password" required>
                        </div>
                        <div class="d-grid gap-2">
                            <button type="submit" class="btn btn-primary rounded-lg shadow-sm">
                                <i class="fas fa-sign-in-alt me-2"></i>Login
                            </button>
                        </div>
                    </form>
                    <div class="mt-3 text-center">
                        <p class="mb-0">Don't have an account? <a href="/Account/Register">Register here</a></p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://kit.fontawesome.com/a076d05399.js" crossorigin="anonymous"></script>
}
